<% layout('layouts/boilerplat') -%>
<body>
    <h3>All Listing</h3>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
       <% for(let listing of allListing){%>
        <a href="/listing/<%= listing._id%>" class="listing-link">
         <div class="card col listing-card" style="width: 18rem;">
            <img src="<%= listing.image.url %>" 
            class="card-img-top" alt="<%= listing.image.filename %>"
             style="height: 20rem;">
             <div class="card-img-overlay">WonderLust</div>
           <div class="card-body">
              <p class="card-text">
                <b><%=listing.title %></b>
                 &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %>/night
              </p>
            </div>
         </div>
        </a>
      <%}%> 
    </div>
</body>
